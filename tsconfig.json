{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "element-plus/global",
            "vite/client",
            "web-bluetooth",
            "@types/node"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts",
        "types/**/*.d.ts",
        "components/**/*.ts",
        "components/**/*.tsx",
        "components/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}